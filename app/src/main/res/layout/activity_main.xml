<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TINH TONG"
        android:textColor="#F44336"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/tvsoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So a: "
        android:textColor="#009688"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <EditText
        android:id="@+id/edSoa"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:layout_below="@id/tvtitle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="472dp"
        android:width="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvsoa"
        app:layout_constraintVertical_bias="0.038"
        />

    <TextView
        android:id="@+id/tvsob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So b: "
        android:textColor="#673AB7"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311" />

    <EditText
        android:id="@+id/edSob"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:layout_below="@id/tvtitle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="472dp"
        android:width="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvsob"
        app:layout_constraintVertical_bias="0.038"
        />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="120dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/edSob"
        app:layout_constraintTop_toTopOf="@+id/edSob" />

    <Button
        android:id="@+id/btntru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/edSob"
        app:layout_constraintTop_toTopOf="@+id/edSob" />

    <Button
        android:id="@+id/btnnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="*"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/btnSum"
        app:layout_constraintTop_toTopOf="@+id/btnSum" />

    <Button
        android:id="@+id/btnchia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/btntru"
        app:layout_constraintTop_toTopOf="@+id/btntru" />


</androidx.constraintlayout.widget.ConstraintLayout>